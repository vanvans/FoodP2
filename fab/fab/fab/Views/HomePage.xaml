<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="fab.HomePage"
             Title="Menu">
  <ContentPage.Content>
  <StackLayout>
    <Button Text="Fucking hell can u work already" VerticalOptions="Center" HorizontalOptions="Center" Clicked="ViewFakedata_Clicked"/>
    
    
    <ListView x:Name="FakedataList" HasUnevenRows="True">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <Grid>
              
              <Grid.RowDefinitions>
                <RowDefinition Height ="Auto"/>
              </Grid.RowDefinitions>
              
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="50*"/>   
              <ColumnDefinition Width="50*"/> 
              </Grid.ColumnDefinitions>

              <Label Grid.Column= "0" Text= "{Binding Category}" />
              <Label Grid.Column="1" Text="{Binding Price}" />
              <Label Grid.Column="2" Text="{Binding Promo}" />
              
            </Grid>
          </ViewCell>
          
        </DataTemplate>   
      </ListView.ItemTemplate>
     </ListView>
  </StackLayout>
 </ContentPage.Content>
</ContentPage>
