<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="fab.HomePage"
             Title="Menu">
  <ContentPage.Content>
  <StackLayout>
    <Button Text="Fucking hell can u work already" VerticalOptions="Center" HorizontalOptions="Center" Clicked="ViewFakedata_Clicked"/>
    
    
    <ListView x:Name="FakedataList" HasUnevenRows="True">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <Grid>
              
              <Grid.RowDefinitions>
                <RowDefinition Height ="Auto"/>
              </Grid.RowDefinitions>
              
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="50*"/>   
              </Grid.ColumnDefinitions>

              <Label Text="{Binding CustomerName}"/>
              <Label Text="{Binding ItemName}"/>
              
            </Grid>
          </ViewCell>
          
        </DataTemplate>   
      </ListView.ItemTemplate>
     </ListView>
    
    
    
    
    <Image Source="https://www.nasa.gov/sites/default/files/styles/image_card_4x3_ratio/public/thumbnails/image/leisa_christmas_false_color.png?itok=Jxf0IlS4"/>
  </StackLayout>
 </ContentPage.Content>
</ContentPage>
