<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="fab.Welcome"  >

  <StackLayout Spacing="12" BackgroundColor="#ff4529">

    <Image Source="http://i68.tinypic.com/2chtg5x.png" HeightRequest="150" WidthRequest="150"/>

    <Button Text="Sign in with ..." 
          FontSize="15" 
          WidthRequest="250"
          HorizontalOptions="Center" 
          VerticalOptions="Center" 
          BackgroundColor="White"
          TextColor="#ff4529"
          Clicked ="userClick"/>
    
  <Button Text="Enter as guest"
          WidthRequest="250"
          FontSize="15" 
          HorizontalOptions="Center" 
          VerticalOptions="Center"
          BackgroundColor="White"
          TextColor="#ff4529"
          Clicked ="guestClick"/>
    
  <Button Text="?" 
          FontSize="20" 
          WidthRequest="55"
          HorizontalOptions="Center" 
          VerticalOptions="End" 
          BackgroundColor="#ff5c20"
          TextColor="White"
          Clicked ="helpmessage"/>

    <BoxView HeightRequest="200" Color="#FF001F" VerticalOptions="EndAndExpand"
 HorizontalOptions="FillAndExpand" />
 
  </StackLayout>
</ContentPage>