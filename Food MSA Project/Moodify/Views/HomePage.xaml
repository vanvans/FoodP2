      <Button Text="Use as guest"
               VerticalOptions="Center"
               BackgroundColor ="#ffffff"
               FontSize="20"
               BorderRadius="15"
               Clicked="LoginWithFacebook_Clicked"/>

     


    </StackLayout>
  

</ContentPage>



